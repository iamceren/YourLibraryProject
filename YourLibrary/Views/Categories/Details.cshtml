@model YourLibrary.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>@Model.Name Category</h4>
    <hr />
    <dl class="dl-horizontal">

        @foreach (var book in Model.Book)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
            </tr>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
