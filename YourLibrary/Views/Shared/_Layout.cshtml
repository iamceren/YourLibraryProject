<!DOCTYPE html>
<html lang="en">
<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Your Library</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    @Styles.Render("~/template/css")
</head>
<!-- body -->
<body class="main-layout home_page">
    <!-- loader  -->
    <div class="loader_bg">
        <div class="loader"><img src="~/Content/images/loading.gif" alt="#" /></div>
    </div>
    <!-- end loader -->
    <!-- header -->
    <header>
        <!-- header inner -->
        <div class="header">
            <div class="container" style="height:80px">
                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                        <div class="full">
                            <div class="center-desk">
                                <div class="logo"> <a href="~/Home/index"><img src="~/Content/images/LogoMakr.png" alt="#"></a> </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9" style="place-self: center">
                        <div class="menu-area">
                            <div class="limit-box">
                                <nav class="main-menu">
                                    <ul class="menu-area-main">
                                        <li class="active"> <a href="~/Home/index">Home</a> </li>
                                        <li> <a href="~/Home/about">About us</a> </li>
                                        @if (HttpContext.Current.User.IsInRole("U"))
                                        {
                                            @Html.Partial("_UserLayout")
                                        }
                                        else if (HttpContext.Current.User.IsInRole("A"))
                                        {
                                            @Html.Partial("_AdminLayout")
                                        }
                                        else
                                        {
                                            <li class="mean-last"> <a href="~/User/Login"><img src="~/Content/images/top-icon.png" alt="#" /></a> </li>
                                        }
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end header inner -->
    </header>
    <!-- end header -->
    <div style="margin-top:110px">
        @RenderBody()
    </div>
    <!-- footer -->
    <footer>
        <div class="copyright">
            <div class="container">
                <p style="position: fixed; left: 0; bottom: 0; width: 100%;">Copyright 2020 All Right Reserved By TURUL</a></p>
            </div>
        </div>
    </footer>
    <!-- end footer -->
    @Scripts.Render("~/template/js")
</body>
</html>